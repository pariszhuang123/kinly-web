{
  "$schema": "https://design-tokens.github.io/community-group/format/",
  "$description": "Kinly Design Tokens - Single source of truth for Flutter and Web",
  "$version": "1.0.0",

  "color": {
    "$type": "color",

    "foundation": {
      "$description": "Raw brand colors - do not use directly in UI",
      "surface": {
        "light": { "$value": "#FAFAF9" },
        "dark": { "$value": "#101312" }
      },
      "brand": {
        "primary": { "$value": "#366D59", "$description": "Kinly Teal" },
        "secondary": { "$value": "#8BAA91", "$description": "Sage" },
        "accent": { "$value": "#F6B73C", "$description": "Honey" }
      },
      "neutral": {
        "ink": { "$value": "#101312" },
        "outline": { "$value": "#B7C7C0" }
      },
      "semantic": {
        "error": { "$value": "#E53935" }
      }
    },

    "semantic": {
      "$description": "Semantic tokens - use these in UI",

      "primary": { "$value": "{color.foundation.brand.primary}" },
      "secondary": { "$value": "{color.foundation.brand.secondary}" },
      "accent": { "$value": "{color.foundation.brand.accent}" },

      "error": { "$value": "{color.foundation.semantic.error}" },
      "success": { "$value": "{color.foundation.brand.secondary}" },
      "warning": { "$value": "{color.foundation.brand.accent}" },
      "info": { "$value": "{color.foundation.brand.primary}" },

      "surface": { "$value": "{color.foundation.surface.light}" },
      "on-surface": { "$value": "{color.foundation.neutral.ink}" },
      "outline": { "$value": "{color.foundation.neutral.outline}" },

      "on-primary": { "$value": "#FFFFFF", "$description": "Foreground text/icon color on primary surfaces" },
      "on-secondary": { "$value": "{color.foundation.neutral.ink}" },
      "on-accent": { "$value": "{color.foundation.neutral.ink}" },
      "on-error": { "$value": "#FFFFFF" },

      "surface-container-low": { "$value": "{color.foundation.surface.light}", "$description": "Card backgrounds (low emphasis)" },
      "surface-container": { "$value": "{color.foundation.surface.light}", "$description": "Default container surface" }
    },

    "brand-text": {
      "$description": "Brand-specific text colors (darkened for contrast)",
      "sage": { "$value": "#4A6650", "$description": "40% black mix with sage" },
      "honey": { "$value": "#6F5019", "$description": "55% black mix with honey" },
      "teal": { "$value": "#1F4133", "$description": "40% black mix with teal" }
    }
  },

  "typography": {
    "$type": "typography",

    "font-family": {
      "display": { "$value": "DM Sans", "$description": "Headings and titles" },
      "body": { "$value": "Inter", "$description": "Body text and labels" }
    },

    "font-weight": {
      "regular": { "$value": 400 },
      "medium": { "$value": 600 },
      "bold": { "$value": 700 }
    },

    "styles": {
      "display-large": {
        "fontFamily": "{typography.font-family.display}",
        "fontSize": { "$value": "40px" },
        "fontWeight": "{typography.font-weight.bold}"
      },
      "display-medium": {
        "fontFamily": "{typography.font-family.display}",
        "fontSize": { "$value": "32px" },
        "fontWeight": "{typography.font-weight.bold}"
      },
      "headline-large": {
        "fontFamily": "{typography.font-family.display}",
        "fontSize": { "$value": "28px" },
        "fontWeight": "{typography.font-weight.bold}"
      },
      "headline-medium": {
        "fontFamily": "{typography.font-family.display}",
        "fontSize": { "$value": "24px" },
        "fontWeight": "{typography.font-weight.medium}"
      },
      "title-large": {
        "fontFamily": "{typography.font-family.display}",
        "fontSize": { "$value": "20px" },
        "fontWeight": "{typography.font-weight.medium}"
      },
      "title-medium": {
        "fontFamily": "{typography.font-family.display}",
        "fontSize": { "$value": "18px" },
        "fontWeight": "{typography.font-weight.medium}"
      },
      "title-small": {
        "fontFamily": "{typography.font-family.display}",
        "fontSize": { "$value": "16px" },
        "fontWeight": "{typography.font-weight.medium}"
      },
      "body-large": {
        "fontFamily": "{typography.font-family.body}",
        "fontSize": { "$value": "16px" },
        "fontWeight": "{typography.font-weight.regular}"
      },
      "body-medium": {
        "fontFamily": "{typography.font-family.body}",
        "fontSize": { "$value": "14px" },
        "fontWeight": "{typography.font-weight.regular}"
      },
      "body-small": {
        "fontFamily": "{typography.font-family.body}",
        "fontSize": { "$value": "12px" },
        "fontWeight": "{typography.font-weight.regular}"
      },
      "label-medium": {
        "fontFamily": "{typography.font-family.body}",
        "fontSize": { "$value": "14px" },
        "fontWeight": "{typography.font-weight.medium}"
      },
      "label-small": {
        "fontFamily": "{typography.font-family.body}",
        "fontSize": { "$value": "12px" },
        "fontWeight": "{typography.font-weight.medium}"
      }
    }
  },

  "spacing": {
    "$type": "dimension",
    "xxs": { "$value": "2px" },
    "xs": { "$value": "4px" },
    "s": { "$value": "8px" },
    "m": { "$value": "12px" },
    "l": { "$value": "16px" },
    "xl": { "$value": "24px" },
    "xxl": { "$value": "32px" },
    "xxxl": { "$value": "40px" }
  },

  "radius": {
    "$type": "dimension",
    "xs": { "$value": "4px", "$description": "Chips, tags" },
    "sm": { "$value": "8px", "$description": "Text fields, small buttons" },
    "md": { "$value": "12px", "$description": "Cards, list items" },
    "lg": { "$value": "16px", "$description": "Bottom sheets, section containers" },
    "xl": { "$value": "24px", "$description": "Hero elements, modals" },
    "pill": { "$value": "999px", "$description": "Full pill badges, pill buttons" }
  },

  "elevation": {
    "$type": "number",
    "$description": "Material elevation levels (used for shadows)",
    "level0": { "$value": 0 },
    "level1": { "$value": 1, "$description": "Cards, list items" },
    "level2": { "$value": 3, "$description": "Prominent cards" },
    "level3": { "$value": 6, "$description": "FAB, bottom sheets" },
    "level4": { "$value": 10, "$description": "Dialogs, modals" },
    "level5": { "$value": 16, "$description": "Hero/large modal surfaces" }
  },

  "opacity": {
    "$type": "number",
    "xxs": { "$value": 0.05, "$description": "Hairline dividers/ink hints" },
    "xs": { "$value": 0.08, "$description": "Very light overlays/badges" },
    "sm": { "$value": 0.12, "$description": "Light overlays/hover/subtle fills" },
    "md": { "$value": 0.16, "$description": "Light badge/background tints" },
    "lg": { "$value": 0.20, "$description": "Soft cards/overlays" },
    "xl": { "$value": 0.24, "$description": "Standard overlay/elevation" },
    "xxl": { "$value": 0.28, "$description": "Strong overlay/hero gradients" },
    "shadow": { "$value": 0.30, "$description": "Shadow tint" },
    "halo": { "$value": 0.35, "$description": "Focus/halo glows" },
    "muted": { "$value": 0.40, "$description": "Muted/disabled tints" },
    "scrim": { "$value": 0.50, "$description": "Scrims/backdrops" },
    "dim": { "$value": 0.60, "$description": "Dim layers" },
    "faint": { "$value": 0.70, "$description": "Faded/disabled text/icons" },
    "faint-strong": { "$value": 0.72, "$description": "Strong faded state" },
    "opaque": { "$value": 0.90, "$description": "Near-opaque surfaces" },
    "opaque-high": { "$value": 0.92, "$description": "Very near-opaque surfaces" }
  },

  "motion": {
    "duration": {
      "$type": "duration",
      "fast": { "$value": "120ms" },
      "medium": { "$value": "200ms" },
      "slow": { "$value": "300ms" },
      "snappy": { "$value": "160ms" }
    },
    "easing": {
      "$type": "cubicBezier",
      "standard": { "$value": [0.4, 0.0, 0.2, 1] },
      "accelerate": { "$value": [0.4, 0.0, 1, 1] },
      "decelerate": { "$value": [0.0, 0.0, 0.2, 1] },
      "emotional": { "$value": [0.25, 1, 0.5, 1] }
    }
  },

  "size": {
    "$type": "dimension",
    "icon": {
      "sm": { "$value": "16px" },
      "md": { "$value": "24px" },
      "lg": { "$value": "40px" }
    },
    "touch-target": {
      "min": { "$value": "48px", "$description": "Minimum touch target for accessibility" }
    },
    "toolbar": { "$value": "56px" },
    "bottom-nav": { "$value": "64px" },
    "fab": { "$value": "56px" },
    "max-content-width": { "$value": "640px" }
  }
}
