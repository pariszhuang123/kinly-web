{
  "$description": "Kinly Design Tokens - Single source of truth for Flutter and Web",
  "$version": "1.0.0",

  "color": {
    "$type": "color",

    "foundation": {
      "$description": "Raw brand colors - do not use directly in UI",
      "surface": {
        "light": { "$value": "#FAFAF9" },
        "dark": { "$value": "#101312" }
      },
      "brand": {
        "primary": { "$value": "#366D59", "$description": "Kinly Teal" },
        "secondary": { "$value": "#8BAA91", "$description": "Sage" },
        "accent": { "$value": "#F6B73C", "$description": "Honey" }
      },
      "neutral": {
        "ink": { "$value": "#101312" },
        "outline": { "$value": "#B7C7C0" }
      },
      "semantic": {
        "error": { "$value": "#E53935" }
      }
    },

    "light": {
      "$description": "Light mode semantic colors",
      "surface": { "$value": "#FAFAF9" },
      "surface-container": { "$value": "#F5F5F4" },
      "surface-container-high": { "$value": "#EFEFEE" },
      "on-surface": { "$value": "#101312" },

      "primary": { "$value": "#366D59" },
      "on-primary": { "$value": "#FFFFFF" },
      "primary-container": { "$value": "#D4E8DE" },
      "on-primary-container": { "$value": "#101312" },

      "secondary": { "$value": "#8BAA91" },
      "on-secondary": { "$value": "#FFFFFF" },
      "secondary-container": { "$value": "#E8F0EA" },
      "on-secondary-container": { "$value": "#101312" },

      "tertiary": { "$value": "#F6B73C" },
      "on-tertiary": { "$value": "#101312" },
      "tertiary-container": { "$value": "#FEF3DC" },
      "on-tertiary-container": { "$value": "#101312" },

      "error": { "$value": "#C62828" },
      "on-error": { "$value": "#FFFFFF" },
      "error-container": { "$value": "#FFEBEE" },
      "on-error-container": { "$value": "#101312" },

      "outline": { "$value": "#B7C7C0" },
      "outline-variant": { "$value": "#D5DED9" },

      "inverse-surface": { "$value": "#101312" },
      "on-inverse-surface": { "$value": "#FAFAF9" },

      "success": { "$value": "#7A9680" },
      "warning": { "$value": "#D9A134" },
      "info": { "$value": "#3D7A66" },

      "disabled": { "$value": "#B0BAB5" },

      "link": { "$value": "#366D59" },
      "link-icon": { "$value": "#366D59" }
    },

    "dark": {
      "$description": "Dark mode semantic colors",
      "surface": { "$value": "#101312" },
      "surface-container": { "$value": "#1C1F1E" },
      "surface-container-high": { "$value": "#262A28" },
      "on-surface": { "$value": "#E8EAE9" },

      "primary": { "$value": "#5A9478" },
      "on-primary": { "$value": "#FFFFFF" },
      "primary-container": { "$value": "#1F3D30" },
      "on-primary-container": { "$value": "#E8EAE9" },

      "secondary": { "$value": "#A4BDA9" },
      "on-secondary": { "$value": "#101312" },
      "secondary-container": { "$value": "#2A3A2D" },
      "on-secondary-container": { "$value": "#E8EAE9" },

      "tertiary": { "$value": "#F6B73C" },
      "on-tertiary": { "$value": "#101312" },
      "tertiary-container": { "$value": "#3D2F14" },
      "on-tertiary-container": { "$value": "#E8EAE9" },

      "error": { "$value": "#EF5350" },
      "on-error": { "$value": "#FFFFFF" },
      "error-container": { "$value": "#3D1C1C" },
      "on-error-container": { "$value": "#E8EAE9" },

      "outline": { "$value": "#5A6B62" },
      "outline-variant": { "$value": "#3A4540" },

      "inverse-surface": { "$value": "#FAFAF9" },
      "on-inverse-surface": { "$value": "#101312" },

      "success": { "$value": "#8BAA91" },
      "warning": { "$value": "#F6B73C" },
      "info": { "$value": "#4A8A73" },

      "disabled": { "$value": "#5A6560" },

      "link": { "$value": "#E8EAE9" },
      "link-icon": { "$value": "#E8EAE9" }
    },

    "brand-text": {
      "$description": "Brand-specific text colors (darkened for contrast)",
      "sage": { "$value": "#4A6650", "$description": "40% black mix with sage" },
      "honey": { "$value": "#6F5019", "$description": "55% black mix with honey" },
      "teal": { "$value": "#1F4133", "$description": "40% black mix with teal" }
    },

    "web": {
      "$description": "Web-only conveniences (Flutter ignores these). NOTE: derived values like rgba shadows/scrims are generated by Style Dictionary, not stored here.",

      "raw": {
        "white": { "$value": "#FFFFFF" },
        "black": { "$value": "#000000" },
        "transparent": { "$value": "transparent" }
      },

      "focus-ring": {
        "$description": "Used for :focus-visible outlines",
        "light": { "$value": "{color.light.primary}" },
        "dark": { "$value": "{color.dark.primary}" }
      },

      "text-selection": {
        "$description": "Used for ::selection colors (pick readable combo)",
        "bg-light": { "$value": "{color.light.primary-container}" },
        "fg-light": { "$value": "{color.light.on-primary-container}" },
        "bg-dark": { "$value": "{color.dark.primary-container}" },
        "fg-dark": { "$value": "{color.dark.on-primary-container}" }
      },

      "web-alias": {
        "$description": "Naming aliases to reduce churn in existing web CSS",
        "accent-light": { "$value": "{color.light.tertiary}" },
        "accent-dark": { "$value": "{color.dark.tertiary}" },
        "on-accent-light": { "$value": "{color.light.on-tertiary}" },
        "on-accent-dark": { "$value": "{color.dark.on-tertiary}" }
      }
    }
  },

  "typography": {
    "$type": "typography",

    "font-family": {
      "display": { "$value": "DM Sans", "$description": "Headings and titles" },
      "body": { "$value": "Inter", "$description": "Body text and labels" }
    },

    "font-weight": {
      "regular": { "$value": 400 },
      "medium": { "$value": 600 },
      "bold": { "$value": 700 }
    },

    "styles": {
      "display-large": {
        "fontFamily": "{typography.font-family.display}",
        "fontSize": { "$value": "40px" },
        "fontWeight": "{typography.font-weight.bold}"
      },
      "display-medium": {
        "fontFamily": "{typography.font-family.display}",
        "fontSize": { "$value": "32px" },
        "fontWeight": "{typography.font-weight.bold}"
      },
      "headline-large": {
        "fontFamily": "{typography.font-family.display}",
        "fontSize": { "$value": "28px" },
        "fontWeight": "{typography.font-weight.bold}"
      },
      "headline-medium": {
        "fontFamily": "{typography.font-family.display}",
        "fontSize": { "$value": "24px" },
        "fontWeight": "{typography.font-weight.medium}"
      },
      "title-large": {
        "fontFamily": "{typography.font-family.display}",
        "fontSize": { "$value": "20px" },
        "fontWeight": "{typography.font-weight.medium}"
      },
      "title-medium": {
        "fontFamily": "{typography.font-family.display}",
        "fontSize": { "$value": "18px" },
        "fontWeight": "{typography.font-weight.medium}"
      },
      "title-small": {
        "fontFamily": "{typography.font-family.display}",
        "fontSize": { "$value": "16px" },
        "fontWeight": "{typography.font-weight.medium}"
      },
      "body-large": {
        "fontFamily": "{typography.font-family.body}",
        "fontSize": { "$value": "16px" },
        "fontWeight": "{typography.font-weight.regular}"
      },
      "body-medium": {
        "fontFamily": "{typography.font-family.body}",
        "fontSize": { "$value": "14px" },
        "fontWeight": "{typography.font-weight.regular}"
      },
      "body-small": {
        "fontFamily": "{typography.font-family.body}",
        "fontSize": { "$value": "12px" },
        "fontWeight": "{typography.font-weight.regular}"
      },
      "label-medium": {
        "fontFamily": "{typography.font-family.body}",
        "fontSize": { "$value": "14px" },
        "fontWeight": "{typography.font-weight.medium}"
      },
      "label-small": {
        "fontFamily": "{typography.font-family.body}",
        "fontSize": { "$value": "12px" },
        "fontWeight": "{typography.font-weight.medium}"
      }
    }
  },

  "spacing": {
    "$type": "dimension",
    "xxs": { "$value": "2px" },
    "xs": { "$value": "4px" },
    "s": { "$value": "8px" },
    "m": { "$value": "12px" },
    "l": { "$value": "16px" },
    "xl": { "$value": "24px" },
    "xxl": { "$value": "32px" },
    "xxxl": { "$value": "40px" }
  },

  "radius": {
    "$type": "dimension",
    "xs": { "$value": "4px", "$description": "Chips, tags" },
    "sm": { "$value": "8px", "$description": "Text fields, small buttons" },
    "md": { "$value": "12px", "$description": "Cards, list items" },
    "lg": { "$value": "16px", "$description": "Bottom sheets, section containers" },
    "xl": { "$value": "24px", "$description": "Hero elements, modals" },
    "pill": { "$value": "999px", "$description": "Full pill badges, pill buttons" }
  },

  "elevation": {
    "$type": "number",
    "$description": "Material elevation levels (used for shadows)",
    "level0": { "$value": 0 },
    "level1": { "$value": 1, "$description": "Cards, list items" },
    "level2": { "$value": 3, "$description": "Prominent cards" },
    "level3": { "$value": 6, "$description": "FAB, bottom sheets" },
    "level4": { "$value": 10, "$description": "Dialogs, modals" },
    "level5": { "$value": 16, "$description": "Hero/large modal surfaces" }
  },

  "opacity": {
    "$type": "number",
    "xxs": { "$value": 0.05, "$description": "Hairline dividers/ink hints" },
    "xs": { "$value": 0.08, "$description": "Very light overlays/badges" },
    "sm": { "$value": 0.12, "$description": "Light overlays/hover/subtle fills" },
    "md": { "$value": 0.16, "$description": "Light badge/background tints" },
    "lg": { "$value": 0.2, "$description": "Soft cards/overlays" },
    "xl": { "$value": 0.24, "$description": "Standard overlay/elevation" },
    "xxl": { "$value": 0.28, "$description": "Strong overlay/hero gradients" },

    "shadow-light": { "$value": 0.18, "$description": "Web shadow alpha in light theme" },
    "shadow-dark": { "$value": 0.45, "$description": "Web shadow alpha in dark theme" },

    "halo": { "$value": 0.35, "$description": "Focus/halo glows" },
    "muted": { "$value": 0.4, "$description": "Muted/disabled tints" },

    "scrim-light": { "$value": 0.5, "$description": "Web scrim alpha in light theme" },
    "scrim-dark": { "$value": 0.6, "$description": "Web scrim alpha in dark theme" },

    "dim": { "$value": 0.6, "$description": "Dim layers" },
    "faint": { "$value": 0.7, "$description": "Faded/disabled text/icons" },
    "faint-strong": { "$value": 0.72, "$description": "Strong faded state" },
    "opaque": { "$value": 0.9, "$description": "Near-opaque surfaces" },
    "opaque-high": { "$value": 0.92, "$description": "Very near-opaque surfaces" }
  },

  "motion": {
    "duration": {
      "$type": "duration",
      "fast": { "$value": "120ms" },
      "medium": { "$value": "200ms" },
      "slow": { "$value": "300ms" },
      "snappy": { "$value": "160ms" }
    },
    "easing": {
      "$type": "cubicBezier",
      "standard": { "$value": [0.4, 0.0, 0.2, 1] },
      "accelerate": { "$value": [0.4, 0.0, 1, 1] },
      "decelerate": { "$value": [0.0, 0.0, 0.2, 1] },
      "emotional": { "$value": [0.25, 1, 0.5, 1] }
    }
  },

  "size": {
    "$type": "dimension",
    "icon": {
      "sm": { "$value": "16px" },
      "md": { "$value": "24px" },
      "lg": { "$value": "40px" }
    },
    "touch-target": {
      "min": { "$value": "48px", "$description": "Minimum touch target for accessibility" }
    },
    "toolbar": { "$value": "56px" },
    "bottom-nav": { "$value": "64px" },
    "fab": { "$value": "56px" },
    "max-content-width": { "$value": "640px" }
  }
}
